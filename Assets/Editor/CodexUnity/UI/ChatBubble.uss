/* ===== Chat Bubble Base ===== */
.bubble {
  padding: 12px 14px;
  border-radius: 12px;
  margin-bottom: 10px;
  background-color: rgba(42, 42, 50, 0.95);
  border-width: 1px;
  border-color: rgba(255, 255, 255, 0.08);
  transition-property: opacity, background-color;
  transition-duration: 200ms;
  opacity: 1;
}

/* ===== Bubble Header ===== */
.bubble-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
  flex-wrap: wrap;
  gap: 6px;
}

.bubble-title {
  -unity-font-style: bold;
  font-size: 11px;
  color: #a8a8b0;
  letter-spacing: 0.5px;
}

.bubble-time {
  font-size: 10px;
  color: #6c6c78;
}

/* ===== Bubble Body ===== */
.bubble-body {
  white-space: normal;
  font-size: 12px;
  color: #e8e8ec;
  overflow: hidden;
}

/* ===== Status Indicator ===== */
.bubble-status {
  flex-direction: row;
  align-items: center;
  gap: 8px;
  margin-top: 8px;
  padding-top: 8px;
  border-top-width: 1px;
  border-top-color: rgba(255, 255, 255, 0.06);
}

.bubble-status-dot {
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: #4ecdc4;
}

.bubble-status-text {
  font-size: 10px;
  color: #6c6c78;
  -unity-font-style: italic;
}

/* ===== Streaming Animation ===== */
.bubble.streaming {
  border-color: rgba(78, 205, 196, 0.4);
}

.bubble.streaming .bubble-status-dot {
  background-color: #4ecdc4;
}

/* Flash animation for streaming content */
@keyframes pulse {
  0% { opacity: 0.4; }
  50% { opacity: 1; }
  100% { opacity: 0.4; }
}

.streaming-indicator {
  width: 6px;
  height: 6px;
  border-radius: 3px;
  background-color: #4ecdc4;
  margin-left: 6px;
}

/* ===== User Bubble (Right Aligned) ===== */
.bubble.user {
  align-self: flex-end;
  background-color: rgba(78, 205, 196, 0.2);
  border-color: rgba(78, 205, 196, 0.35);
  max-width: 85%;
  margin-left: 40px;
}

.bubble.user .bubble-title {
  color: #4ecdc4;
}

.bubble.user .bubble-body {
  color: #e8e8ec;
}

/* ===== Assistant Bubble (Left Aligned) ===== */
.bubble.assistant {
  align-self: flex-start;
  background-color: rgba(168, 85, 247, 0.15);
  border-color: rgba(168, 85, 247, 0.3);
  max-width: 90%;
  margin-right: 20px;
}

.bubble.assistant .bubble-title {
  color: #a855f7;
}

.bubble.assistant.streaming {
  background-color: rgba(168, 85, 247, 0.2);
  border-color: rgba(168, 85, 247, 0.5);
}

/* ===== Completed State ===== */
.bubble.completed {
  border-color: rgba(38, 222, 129, 0.35);
}

.bubble.completed .bubble-status-dot {
  background-color: #26de81;
}

/* ===== Error State ===== */
.bubble.error {
  border-color: rgba(255, 107, 107, 0.4);
}

.bubble.error .bubble-status-dot {
  background-color: #ff6b6b;
}

.bubble.error .bubble-status-text {
  color: #ff6b6b;
}

/* ===== System Message (Centered) ===== */
.bubble.system {
  align-self: center;
  background-color: rgba(108, 108, 120, 0.2);
  border-color: rgba(255, 255, 255, 0.1);
  max-width: 90%;
  padding: 8px 14px;
}

.bubble.system .bubble-title {
  display: none;
}

.bubble.system .bubble-body {
  font-size: 11px;
  color: #a8a8b0;
  -unity-text-align: middle-center;
}

/* ===== Hidden Elements ===== */
.hidden {
  display: none;
}
