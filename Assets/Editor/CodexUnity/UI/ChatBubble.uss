/* ===== Chat Bubble Base ===== */
.bubble {
  padding: 10px 12px;
  border-radius: 10px;
  margin-bottom: 8px;
  background-color: rgba(42, 42, 50, 0.9);
  border-width: 1px;
  border-color: rgba(255, 255, 255, 0.06);
  transition-property: opacity;
  transition-duration: 180ms;
  opacity: 1;
}

.bubble.is-new {
  opacity: 0;
}

.bubble.is-new.reveal {
  opacity: 1;
}

/* ===== Bubble Header ===== */
.bubble-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
  flex-wrap: wrap;
  gap: 4px;
}

.bubble-title {
  -unity-font-style: bold;
  font-size: 11px;
  color: #a8a8b0;
}

.bubble-time {
  font-size: 10px;
  color: #6c6c78;
}

/* ===== Bubble Body ===== */
.bubble-body {
  white-space: normal;
  -unity-text-wrap-mode: wrap;
  font-size: 12px;
  color: #e8e8ec;
  word-wrap: break-word;
}

/* ===== Raw Section ===== */
.bubble-raw {
  margin-top: 6px;
  padding: 8px;
  background-color: rgba(78, 205, 196, 0.08);
  border-radius: 6px;
  display: none;
}

.bubble-raw-text {
  font-family: "Cascadia Mono", "Consolas", monospace;
  font-size: 10px;
  color: #a8a8b0;
  white-space: normal;
  -unity-text-wrap-mode: wrap;
  word-wrap: break-word;
}

.bubble-raw-toggle {
  margin-top: 6px;
  align-self: flex-start;
  background-color: transparent;
  border-width: 1px;
  border-color: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  padding: 4px 8px;
  font-size: 10px;
  color: #6c6c78;
}

.bubble-raw-toggle:hover {
  background-color: rgba(255, 255, 255, 0.05);
  color: #a8a8b0;
}

/* ===== Bubble Types ===== */
.bubble.user {
  align-self: flex-end;
  background-color: rgba(78, 205, 196, 0.18);
  border-color: rgba(78, 205, 196, 0.3);
  max-width: 85%;
}

.bubble.user .bubble-title {
  color: #4ecdc4;
}

.bubble.assistant {
  align-self: flex-start;
  background-color: rgba(168, 85, 247, 0.15);
  border-color: rgba(168, 85, 247, 0.25);
  max-width: 85%;
}

.bubble.assistant .bubble-title {
  color: #a855f7;
}

.bubble.event {
  align-self: flex-start;
  background-color: rgba(38, 222, 129, 0.12);
  border-color: rgba(38, 222, 129, 0.2);
  max-width: 95%;
}

.bubble.event .bubble-title {
  color: #26de81;
}

.bubble.stderr {
  align-self: flex-start;
  background-color: rgba(255, 107, 107, 0.12);
  border-color: rgba(255, 107, 107, 0.25);
  max-width: 95%;
}

.bubble.stderr .bubble-title {
  color: #ff6b6b;
}

.bubble.system {
  align-self: center;
  background-color: rgba(108, 108, 120, 0.2);
  border-color: rgba(255, 255, 255, 0.08);
  max-width: 90%;
  text-align: center;
}

.bubble.system .bubble-title {
  color: #6c6c78;
}

/* ===== Level Indicators ===== */
.bubble.level-warn {
  border-color: rgba(254, 202, 87, 0.5);
}

.bubble.level-warn .bubble-title {
  color: #feca57;
}

.bubble.level-error {
  border-color: rgba(255, 107, 107, 0.5);
}

.bubble.level-error .bubble-title {
  color: #ff6b6b;
}
