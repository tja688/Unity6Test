<?xml version="1.0" encoding="utf-8"?>
<ui:UXML xmlns:ui="UnityEngine.UIElements">
  <ui:VisualElement class="bubble">
    <ui:VisualElement class="bubble-header">
      <ui:Label name="titleLabel" class="bubble-title" text="title" />
      <ui:Label name="timestampLabel" class="bubble-time" text="00:00:00" />
    </ui:VisualElement>
    <ui:Label name="bodyLabel" class="bubble-body" text="message" />
    <ui:VisualElement name="statusContainer" class="bubble-status hidden">
      <ui:VisualElement name="statusDot" class="bubble-status-dot" />
      <ui:Label name="statusText" class="bubble-status-text" text="Processing..." />
    </ui:VisualElement>
  </ui:VisualElement>
</ui:UXML>
